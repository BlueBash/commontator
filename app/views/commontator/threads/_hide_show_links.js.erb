<%#
  Views that use this partial must supply the following variables:
  thread
%>

$("#thread-<%= thread.id %>-hide-link").click(function() {
  $("#thread-<%= thread.id %>-span").hide();

  $("#thread-<%= thread.id %>-show-span").fadeIn()[0].scrollIntoView();
});

$("#thread-<%= thread.id %>-show-link").click(function() {
  $("#thread-<%= thread.id %>-span").fadeIn()[0].scrollIntoView();

  $("#thread-<%= thread.id %>-show-span").hide();
});

$("#thread-<%= thread.id %>-hide-span").show();
