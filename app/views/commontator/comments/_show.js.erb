<%
  # Views that use this partial must supply the following variables:
  # user
  # thread
  # comment
  # page
  # show_all
%>

var commentElement = document.querySelector("#commontator-comment-" + <%= comment.id %>);
var commentHTML = `
  <%= escape_javascript(
    render partial: 'commontator/comments/show', formats: [ :html ], locals: {
      user: user,
      thread: thread,
      comment: comment,
      page: page,
      show_all: show_all
    }
  ) %>
`;
commentElement.innerHTML = commentHTML;
