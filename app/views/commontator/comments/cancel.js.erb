<% if @comment.nil? || !@comment.persisted? %>
  $("#thread-<%= @commontator_thread.id %>-new-comment-form-div").hide();

  $("#thread-<%= @commontator_thread.id %>-new-comment-link-div").fadeIn();
<% else %>
  $("#comment-<%= @comment.id %>-body-div").html("<%= escape_javascript(
    render partial: 'body', locals: { comment: @comment }
  ) %>");
<% end %>

